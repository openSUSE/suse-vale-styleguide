extends: existence
message: 'Only use slashes with filenames, links, and terms such as TCP/IP in "%s".'
level: suggestion
link: https://documentation.suse.com/style/current/html/docu_styleguide/sec-language.html#sec-slash

tokens:
  # Match things like user/admin but not URLs or protocol prefixes
  - '(?<![:\w\/\\.])\w+(?:\s?/\s?\w+)'

exceptions:
  # dates and numbers
  - '\d{2,4}/\d{2,4}'
  - '\d{1,3}/\d{1,3}'
  # common and technical terms
  - '(?i)and/or'
  - '(?i)allow/deny'
  - '(?i)AMD64/Intel'
  - '(?i)client/server'
  - '(?i)input/output'
  - '(?i)I/O'
  - '(?i)[kmgt]b/s'
  - '(?i)N/A'
  - '(?i)read/write'
  - '(?i)R/W'
  - '(?i)SSL/TLS'
  - '(?i)sync/import'
  - '(?i)TCP/IP'
  - '(?i)Fi/Bluetooth'
